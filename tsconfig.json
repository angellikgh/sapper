{
	"compilerOptions": {
		"noImplicitThis": true,
		"noEmitOnError": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"lib": ["es5", "es6", "dom"],
		"importHelpers": true,
		"target": "ES5",
		"baseUrl": ".",
		"paths": {
			"@sapper/*": ["runtime/src/*"]
		}
	},
	"include": [
		"src",
		"runtime"
	],
	"exclude": [
		"node_modules"
	],
	"types": [
		"@sapper"
	]
}
